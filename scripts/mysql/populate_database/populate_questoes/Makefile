######################################################################################################################################
# HEADER
######################################################################################################################################
# BASIC SETTINGS (objects, flags, etc.)
######################################################################################################################################

BINARY_NAME = geraquestao
OBJS = main.o

# libmysqlcppconn instalado via 'sudo apt-get install libmysqlcppconn-dev'
LINKING_FLAGS = -O3 -std=c++11 -lmysqlcppconn

COMPILATION_FLAGS = -c -O3 -std=c++11 -I../../../lib/myslq-conn/include/jdbc

######################################################################################################################################
# COMPILATION
######################################################################################################################################
all: $(OBJS)
		g++ $(OBJS) -o $(BINARY_NAME) $(LINKING_FLAGS)

%.o: %.cpp
		g++ -c $< -o $@ $(COMPILATION_FLAGS)

######################################################################################################################################
clean:
		rm *.o createdb
